.large-10.medium-12.small-12.columns.light-grey-bg-pattern
  .row
    .large-10.columns
      .page-name
        %h3.left Profile
        .clearfix
  #profile
    .row
      .large-4.medium-6.columns
        .profile-item.white-bg.border
          %h4
            = current_user.username
          %hr/
          .row
            .large-6.medium-12.small-12.columns
              = image_tag "32.jpg", class:"profile-picture"
            .large-6.medium-12.small-12.columns
              %p ruth@gmail.com
              %p 989-983-7397
              %p 27 Browns Bay New York
              %p Developer
        .ongoing-task.white-bg.border
          %h4 Goal Info
          %hr/
          %span Awake Times
          %p
            - if current_user.goal
              = current_user.goal.awake_time.strftime("%I:%M%p")
              \-
              = current_user.goal.sleep_time.strftime("%I:%M%p")
          %span How many steps you want to make in a day
          %p
            - if current_user.goal
              = current_user.goal.steps
      .large-8.medium-6.columns
        .profile-info
          .white-bg
            .tabs-content
              #panel2-1.content.active
                %h4.coral Set some goals here
                %br/
                = form_for(@goal) do |f|
                  = f.label :"What time do you wake up?"
                  = f.text_field :awake_time, placeholder: "Format: HH:MM"
                  = f.label :"What time do you go to sleep?"
                  = f.text_field :sleep_time, placeholder: "Format: HH:MM"
                  = f.label :"How many steps do you want to take a day?"
                  = f.text_field :steps
                  = f.submit
                .clearfix


