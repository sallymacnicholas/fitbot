      = image_tag 'fitbot.png'
      %i.fi-list.toggles{"data-toggle" => "hide"}
  .large-10.medium-8.small-12.columns.top-menu
    .row
      .large-6.medium-6.small-12.columns
        .row
          .large-8.columns
            %input#Text1.search-text{:placeholder => "Search", :type => "text"}/
      .large-4.medium-6.small-12.columns.text-center
        .row
          .medium-4.small-4.columns
            .notification
              %i.fi-megaphone
              %span.megaphone 5
          .medium-4.small-4.columns
